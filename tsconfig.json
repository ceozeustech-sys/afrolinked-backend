{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "lib": ["es2020"],
    "types": ["node"]
  },
  "include": ["src/**/*", "seed-test-user.ts"],
  "exclude": ["node_modules"]
}
